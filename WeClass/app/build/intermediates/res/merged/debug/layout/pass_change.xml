<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.weclass.LoginActivity">


    <EditText
        android:id="@+id/confirm_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="确认新密码"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/new_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="请输入新密码"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/confirm_pass"
        android:layout_marginBottom="20dp"/>


    <Button
        android:id="@+id/change_but"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/confirm_pass"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass"
        android:layout_marginTop="15dp"
        android:text="确定"/>

    <Button
        android:id="@+id/cancel_but"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/confirm_pass"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass"
        android:layout_marginTop="15dp"
        android:text="取消"/>
</android.support.constraint.ConstraintLayout>

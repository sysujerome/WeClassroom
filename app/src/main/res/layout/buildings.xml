<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gray_back"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/building_image"
        android:background="#808080" />
    <ImageView
        android:layout_alignParentStart="true"
        android:id="@+id/back"
        android:src="@mipmap/back"
        android:layout_marginLeft="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/building_image"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/sysu"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/building_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gray_back"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:text="教室名"
        android:textColor="#000000"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/star"
        android:src="@mipmap/empty_star"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/gray_back"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd ="true"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/gray_back"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="申请原因"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/price1"
        android:layout_below="@id/price1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:text="申请人" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/type"
        android:text="申请人名字" />

    <ImageView
        android:id="@+id/init_item"
        android:src="@mipmap/apply"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd ="true"
        android:layout_alignTop="@id/price1"
        android:layout_marginEnd="20dp"/>
    <View
        android:id="@+id/boundary1"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/init_item"
        android:layout_alignTop="@id/price1"
        android:background="#808080"
        android:layout_marginRight="20dp"/>




</RelativeLayout>